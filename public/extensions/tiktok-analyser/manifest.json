{
  "manifest_version": 3,
  "name": "TikTok Video Analyser",
  "version": "1.0.0",
  "description": "Analise, organize e baixe vídeos do TikTok com filtros avançados e ações em massa",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "*://*.tiktok.com/*",
    "*://*.tiktokcdn.com/*",
    "*://tikwm.com/*",
    "*://*.tikwm.com/*",
    "*://corsproxy.io/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.tiktok.com/*"],
      "js": ["content.js"],
      "css": ["content-styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dashboard.html",
        "dashboard.js",
        "dashboard.css",
        "vendor/jszip.min.js"
      ],
      "matches": ["*://*.tiktok.com/*"]
    }
  ]
}

